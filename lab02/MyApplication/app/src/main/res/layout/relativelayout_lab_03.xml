    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="22sp"
        android:layout_alignParentTop="true"/>





    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="Hello"
