<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc">


    <Button
        android:id="@+id/button1"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:text="APPS"
        android:textColor="#ffffff"
        android:background="#28b608"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:text="GAMES"
        android:textColor="#ffffff"
        android:background="#28b608"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:text="MOVIES"
        android:textColor="#ffffff"
        android:background="#b91e1e"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="166dp"
        android:layout_height="40dp"
        android:text="BOOKS"
        android:textColor="#ffffff"
        android:background="#35c8e2"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="74dp"
        android:layout_height="35dp"
        android:text="MORE"
        android:textColor="#ffffff"
        android:background="#28b608"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="74dp"
        android:layout_height="35dp"
        android:text="MORE"
        android:textColor="#ffffff"
        android:background="#28b608"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="156dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintVertical_bias="0.864" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="135dp"
        android:layout_height="25dp"
        android:text="Racing Games"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintBottom_toBottomOf="@+id/button5"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.942" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beat the Records!"
        android:textSize="15dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New + Updated Games"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintRight_toLeftOf="@+id/button6"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintTop_toTopOf="@+id/button6"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New recommendations every week!"
        android:textSize="15dp"
        android:layout_marginTop="-7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView7" />
</android.support.constraint.ConstraintLayout>